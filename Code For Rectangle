#include<stdio.h>
int main()
{
    //Write a C-Program to calculate area and Perimeter of a rectangle.
    
    float height;
    float width;
    
    printf("Enter the height of the rectangle ");
    scanf("%f", &height);
    
    printf("\nEnter the width of the rectangle ");
    scanf("%f", &width);
    
    float perimetre = 2*(height*width);
    float area = height*width;
    
    printf("\nTriangle having height %.4f and width %.4f has the perimetre = %.4f and area = %.4f", height, width, perimetre, area);
    
    return 0;
}
