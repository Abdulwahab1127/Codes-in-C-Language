#include<stdio.h>
int main()
{
/* A programme to check whether a number is a prime number or not */



int n;
printf("\nEnter a number\t:\t");
scanf("%d", &n);



int flag=1;



int i=2;



while(i<n)
{
    if(n%i==0)
    {
        flag=0;
    }



    break;
i++;
}



if(flag==0)
{
    printf("\n%d is not a prime number\n", n);
}
else
{
    printf("\n%d is a prime number\n", n);
}



return 0;
}
